<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_profile_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.ProfileSettingsFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_regular">

            <ImageView
                android:id="@+id/profile_settings_arrow_button"
                android:layout_width="@dimen/icon_size"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="?android:attr/selectableItemBackground"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="@string/back_arrow" />

            <TextView
                android:id="@+id/profile_settings_personal_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_settings_arrow_button"
                android:layout_marginTop="@dimen/margin_regular"
                android:fontFamily="@font/raleway_bold"
                android:text="PERSONAL"
                android:textColor="@color/gray"/>

            <View
                android:id="@+id/profile_settings_personal_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_settings_personal_section"
                android:layout_marginBottom="@dimen/margin_smaller"
                android:layout_centerVertical="true"
                android:background="@color/gray"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_settings_personal_separator"
                android:paddingHorizontal="@dimen/padding_smaller"
                android:paddingVertical="@dimen/padding_small"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/profile_settings_personal_picture_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/text_settings_title"
                    android:text="Profile picture"
                    android:textColor="@color/darker_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_settings_personal_picture_title"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="@dimen/text_small"
                    android:text="Click on a photo to change your profile picture"
                    android:textColor="@color/gray"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/profile_settings_progressbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:visibility="invisible">
        <com.victor.loading.rotate.RotateLoading
            android:id="@+id/profile_progressbar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:loading_width="4dp"
            app:loading_color="@color/white"
            android:layout_gravity="center"/>
    </FrameLayout>

</FrameLayout>