<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="travel"
            type="com.martynaroj.traveljournal.services.models.Travel"/>
        <variable
            name="destination"
            type="com.martynaroj.traveljournal.services.models.Address"/>
        <variable
            name="accommodation"
            type="com.martynaroj.traveljournal.services.models.Reservation"/>
        <variable
            name="transport"
            type="com.martynaroj.traveljournal.services.models.Reservation"/>
    </data>

        <FrameLayout
            android:id="@+id/fragment_details"
            tools:context=".view.fragments.DetailsFragment"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/white">

        <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true"
            tools:ignore="UselessParent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_regular">

                <ImageView
                    android:id="@+id/details_arrow_button"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:background="?android:attr/selectableItemBackground"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="@string/back_arrow" />

                <TextView
                    android:id="@+id/details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/details_arrow_button"
                    app:layout_constraintTop_toBottomOf="@+id/details_arrow_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/robotoslab_medium"
                    android:text="@string/details_title"
                    android:textSize="@dimen/text_bigger"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/details_preview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/details_arrow_button"
                    android:layout_marginTop="@dimen/margin_regular"
                    android:fontFamily="@font/raleway_bold"
                    android:text="@string/details_preview_title"
                    android:textColor="@color/main_blue"/>

                <View
                    android:id="@+id/details_preview_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/details_preview_title"
                    android:layout_marginBottom="@dimen/margin_smaller"
                    android:layout_centerVertical="true"
                    android:background="@color/main_blue"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/details_preview_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/details_preview_separator"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/margin_regular">

                    <TextView
                        android:id="@+id/details_preview_travel_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:fontFamily="@font/raleway_bold"
                        android:textSize="@dimen/text_bigger"
                        android:text="@{travel.name}"
                        android:textAlignment="center"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/details_preview_travel_name"
                        android:layout_marginTop="@dimen/margin_regular"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/details_preview_travel_image"
                            android:layout_width="@dimen/travel_image_half_w"
                            android:layout_height="@dimen/travel_image_half_h"
                            android:background="?android:attr/selectableItemBackground"
                            android:src="@color/light_gray"
                            app:travelUrl="@{travel.image}"
                            android:contentDescription="@string/details_travel_image"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_tiny"
                            android:orientation="vertical"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/details_preview_destination_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_regular"
                                android:textSize="@dimen/text_small"
                                android:text="@{destination.name}"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/details_preview_destination_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway_regular"
                                android:textSize="@dimen/text_small"
                                android:text="@{destination.address}"
                                android:textColor="@color/black"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <FrameLayout
            android:id="@+id/details_progressbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:visibility="invisible">
            <com.victor.loading.rotate.RotateLoading
                android:id="@+id/details_progressbar"
                android:layout_width="@dimen/progressbar_size"
                android:layout_height="@dimen/progressbar_size"
                app:loading_width="@dimen/progressbar_loading_width"
                app:loading_color="@color/white"
                android:layout_gravity="center"/>
        </FrameLayout>

    </FrameLayout>

</layout>